generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id       String @id @default(cuid())
  // phone        String
  nickName String @unique
  email    String @unique
  password String
  coins    Coin[]
}

model Coin {
  id           String  @id @default(cuid())
  coin         String  @unique
  fullCoinName String
  // amount       Float
  orders       Order[]
  user         User?   @relation(fields: [userId], references: [id])
  userId       String?
}

model Order {
  id         String      @id @default(cuid())
  status     OrderStatus @default(BUY_IN_PROGRESS)
  orderParts OrderPart[]
  coin       Coin?       @relation(fields: [coinId], references: [id])
  coinId     String?
}

model OrderPart {
  id            String          @id @default(cuid())
  clientOrderId String
  transactTime  String
  fullPrice     Float
  coinsAmount   Float
  oneCoinPrice  Float
  status        OrderPartStatus @default(NEW)
  type          OrderType       @default(MARKET)
  side          OrderSide       @default(SELL)
  order         Order?          @relation(fields: [orderId], references: [id])
  orderId       String?
}

enum OrderSide {
  BUY
  SELL
}

enum OrderType {
  LIMIT
  MARKET
  STOP_LOSS
  STOP_LOSS_LIMIT
  TAKE_PROFIT
  TAKE_PROFIT_LIMIT
  LIMIT_MAKER
}

enum OrderStatus {
  BUY_IN_PROGRESS
  BUY_DONE
  SELL_IN_PROGRESS
  SELL_DONE
}

enum OrderPartStatus {
  NEW
  PARTIALLY_FILLED
  FILLED
  CANCELED
  PENDING_CANCEL
  REJECTED
  EXPIRED
}
